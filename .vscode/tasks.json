{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format Selection as Markdown Table",
            "type": "shell",
            "command": "echo \"${selectedText}\" | python3 \"${workspaceFolder}/tools/book_parser.py\" --format md",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Convert Names to Tab-Delimited Columns",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/tools/convert_names_to_columns.py",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}-Columns.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Book Pipeline (Markdown → cleaned)",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-lc",
                "TABLES_INLINE=${input:tablesInline} python3 \"${workspaceFolder}/scripts/book_pipeline.py\" \"${file}\" --out-suffix _progress_pipeline"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Header Depth Corrector (H1–H4)",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-lc",
                "python3 \"${workspaceFolder}/tools/markdown_header_depth_corrector.py\" \"${file}\" --max-depth 4"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "QC: Long Line Detector (report only)",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-lc",
                "python3 \"${workspaceFolder}/tools/long_line_detector.py\" \"${file}\" --threshold 150 --ignore-headers --ignore-code --report \"${workspaceFolder}/reports/${fileBasenameNoExtension}_longlines.txt\""
            ],
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        {
            "label": "QC: Paragraph Break Detector (summary)",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-lc",
                "python3 \"${workspaceFolder}/tools/paragraph_break_detector.py\" \"${file}\" || true"
            ],
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        {
            "label": "PDF → Markdown (smart pipeline)",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-lc",
                "chmod +x \"${workspaceFolder}/scripts/pdf_to_md_smart.sh\" && TABLES=${input:tables} OCRMODE=${input:ocrMode} PANDOC_MEDIA=media/${fileBasenameNoExtension} \"${workspaceFolder}/scripts/pdf_to_md_smart.sh\" '${file}'"
            ],
            "options": {
                "env": {
                    "PANDOC_MEDIA": "media/${fileBasenameNoExtension}"
                }
            },
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        {
            "label": "PDF → Markdown (convert only)",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-lc",
                "chmod +x \"${workspaceFolder}/scripts/pdf_to_md_smart.sh\" && PIPELINE=0 OCRMODE=${input:ocrMode} PANDOC_MEDIA=media/${fileBasenameNoExtension} \"${workspaceFolder}/scripts/pdf_to_md_smart.sh\" '${file}'"
            ],
            "options": {
                "env": {
                    "PANDOC_MEDIA": "media/${fileBasenameNoExtension}"
                }
            },
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        {
            "label": "DOCX → Markdown (preserve tags)",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-lc",
                "chmod +x \"${workspaceFolder}/scripts/docx_to_md_tagged.sh\" && PANDOC_MEDIA=media/${fileBasenameNoExtension} \"${workspaceFolder}/scripts/docx_to_md_tagged.sh\" '${file}'"
            ],
            "options": {
                "env": {
                    "PANDOC_MEDIA": "media/${fileBasenameNoExtension}"
                }
            },
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "ocrMode",
            "type": "pickString",
            "description": "OCR mode for PDF conversion",
            "options": [
                { "label": "Auto (detect)", "value": "auto" },
                { "label": "Force OCR", "value": "force" },
                { "label": "Skip OCR", "value": "skip" }
            ],
            "default": "auto"
        },
        {
            "id": "tables",
            "type": "pickString",
            "description": "Convert Markdown pipe tables to inline tab-delimited TSV?",
            "options": [
                { "label": "No", "value": "0" },
                { "label": "Yes", "value": "1" }
            ],
            "default": "0"
        },
        {
            "id": "tablesInline",
            "type": "pickString",
            "description": "Inline TSV tables during cleanup pipeline?",
            "options": [
                { "label": "No", "value": "0" },
                { "label": "Yes", "value": "1" }
            ],
            "default": "0"
        }
    ]
}
